<Window x:Class="Tracker.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Title="Loading..."
        Height="400"
        Width="500"
        Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Themes/DefaultTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Glow effect for logo -->
            <DropShadowEffect x:Key="LogoGlow" 
                              BlurRadius="30" 
                              ShadowDepth="0" 
                              Color="#FFB612" 
                              Opacity="0.5"/>
            
            <!-- Subtle shadow for container -->
            <DropShadowEffect x:Key="ContainerShadow" 
                              BlurRadius="40" 
                              ShadowDepth="5" 
                              Direction="270"
                              Color="#000000" 
                              Opacity="0.6"/>
            
            <!-- Loading spinner rotation storyboard -->
            <Storyboard x:Key="SpinnerAnimation" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetName="SpinnerTransform"
                                 Storyboard.TargetProperty="Angle"
                                 From="0" To="360"
                                 Duration="0:0:1.5"/>
            </Storyboard>
            
            <!-- Pulse animation for logo -->
            <Storyboard x:Key="LogoPulse" RepeatBehavior="Forever" AutoReverse="True">
                <DoubleAnimation Storyboard.TargetName="LogoPath"
                                 Storyboard.TargetProperty="Effect.Opacity"
                                 From="0.3" To="0.7"
                                 Duration="0:0:1.5"/>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border CornerRadius="16"
            Effect="{StaticResource ContainerShadow}"
            Margin="20">
        <!-- Gradient background -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A1A" Offset="0"/>
                <GradientStop Color="#0D0D0D" Offset="0.5"/>
                <GradientStop Color="#1A1A1A" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <!-- Subtle border -->
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFB612" Offset="0"/>
                <GradientStop Color="#806B0A" Offset="0.5"/>
                <GradientStop Color="#FFB612" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.BorderThickness>
            <Thickness>1</Thickness>
        </Border.BorderThickness>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            
            <!-- Logo Section -->
            <StackPanel Grid.Row="0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                
                <!-- Tracker Logo Icon -->
                <Viewbox Width="100" Height="100" Margin="0,0,0,15">
                    <Path x:Name="LogoPath"
                          Effect="{StaticResource LogoGlow}"
                          Fill="#FFB612"
                          Data="M22,5.5A3.5,3.5 0 0,0 18.5,2A3.5,3.5 0 0,0 15,5.5V6A3,3 0 0,1 12,9C10,9 9,6 6,6A4,4 0 0,0 2,10V11H4V10A2,2 0 0,1 6,8C6.86,8 7.42,8.45 8.32,9.24C9.28,10.27 10.6,10.9 12,11A5,5 0 0,0 17,6V5.5A1.5,1.5 0 0,1 18.5,4A1.5,1.5 0 0,1 20,5.5C19.86,6.35 19.58,7.18 19.17,7.94C18.5,9.2 18.11,10.58 18,12C18.09,13.37 18.5,14.71 19.21,15.89C19.6,16.54 19.87,17.25 20,18A2,2 0 0,1 18,20A2,2 0 0,1 16,18A3.75,3.75 0 0,0 12.25,14.25A3.75,3.75 0 0,0 8.5,18V18.5A1.5,1.5 0 0,1 7,20A3,3 0 0,1 4,17V15H6V13H0V15H2V17A5,5 0 0,0 7,22A3.5,3.5 0 0,0 10.5,18.5V18A1.75,1.75 0 0,1 12.25,16.25A1.75,1.75 0 0,1 14,18A4,4 0 0,0 18,22A4,4 0 0,0 22,18C22,16 20,14 20,12C20,10 22,7.5 22,5.5Z"/>
                </Viewbox>
                
                <!-- App Title -->
                <TextBlock Text="Team Tracker"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#FFB612"
                           HorizontalAlignment="Center"
                           FontFamily="Segoe UI">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#FFB612" Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <!-- Tagline -->
                <TextBlock Text="Manage your team effectively"
                           FontSize="14"
                           Foreground="#808080"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"
                           FontFamily="Segoe UI"/>
            </StackPanel>
            
            <!-- Loading Section -->
            <StackPanel Grid.Row="1" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,10">
                
                <!-- Custom spinner -->
                <Canvas Width="40" Height="40" HorizontalAlignment="Center">
                    <Canvas.RenderTransform>
                        <RotateTransform x:Name="SpinnerTransform" CenterX="20" CenterY="20"/>
                    </Canvas.RenderTransform>
                    
                    <!-- Spinner dots -->
                    <Ellipse Width="8" Height="8" Fill="#FFB612" Canvas.Left="16" Canvas.Top="0" Opacity="1"/>
                    <Ellipse Width="8" Height="8" Fill="#FFB612" Canvas.Left="28" Canvas.Top="4" Opacity="0.875"/>
                    <Ellipse Width="8" Height="8" Fill="#FFB612" Canvas.Left="32" Canvas.Top="16" Opacity="0.75"/>
                    <Ellipse Width="8" Height="8" Fill="#FFB612" Canvas.Left="28" Canvas.Top="28" Opacity="0.625"/>
                    <Ellipse Width="8" Height="8" Fill="#FFB612" Canvas.Left="16" Canvas.Top="32" Opacity="0.5"/>
                    <Ellipse Width="8" Height="8" Fill="#FFB612" Canvas.Left="4" Canvas.Top="28" Opacity="0.375"/>
                    <Ellipse Width="8" Height="8" Fill="#FFB612" Canvas.Left="0" Canvas.Top="16" Opacity="0.25"/>
                    <Ellipse Width="8" Height="8" Fill="#FFB612" Canvas.Left="4" Canvas.Top="4" Opacity="0.125"/>
                </Canvas>
            </StackPanel>
            
            <!-- Status Text -->
            <TextBlock x:Name="StatusText"
                       Grid.Row="2"
                       Text="Initializing..."
                       FontSize="13"
                       Foreground="#A0A0A0"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,20"
                       FontFamily="Segoe UI"/>
            
            <!-- Progress Bar -->
            <Border Grid.Row="3"
                    Height="4"
                    Margin="40,0,40,0"
                    CornerRadius="2"
                    Background="#2A2A2A">
                <Border x:Name="ProgressFill"
                        HorizontalAlignment="Left"
                        Width="0"
                        CornerRadius="2"
                        Background="#FFB612"/>
            </Border>
            
            <!-- Footer -->
            <StackPanel Grid.Row="4" 
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15">
                <TextBlock Text="Â© 2024 DeepEnd Technologies"
                           FontSize="11"
                           Foreground="#505050"
                           HorizontalAlignment="Center"
                           FontFamily="Segoe UI"/>
                <TextBlock x:Name="VersionText"
                           Text="Version 1.0.0"
                           FontSize="10"
                           Foreground="#404040"
                           HorizontalAlignment="Center"
                           FontFamily="Segoe UI"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

