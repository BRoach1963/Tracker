<controls:BaseWindow x:Class="Tracker.Views.Dialogs.MessageBoxDialog"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:controls="clr-namespace:Tracker.Controls"
                     xmlns:converters="clr-namespace:Tracker.Common.Converters"
                     WindowStyle="None"
                     AllowsTransparency="True"
                     Background="Transparent"
                     ShowInTaskbar="False"
                     ResizeMode="NoResize"
                     SizeToContent="WidthAndHeight"
                     WindowStartupLocation="CenterOwner"
                     MinWidth="400"
                     MaxWidth="600">
    <controls:BaseWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/DialogStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Icon paths -->
            <Geometry x:Key="InfoIcon">M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z</Geometry>
            <Geometry x:Key="WarningIcon">M13 14H11V10H13M13 18H11V16H13M1 21H23L12 2L1 21Z</Geometry>
            <Geometry x:Key="ErrorIcon">M12,2C17.53,2 22,6.47 22,12C22,17.53 17.53,22 12,22C6.47,22 2,17.53 2,12C2,6.47 6.47,2 12,2M15.59,7L12,10.59L8.41,7L7,8.41L10.59,12L7,15.59L8.41,17L12,13.41L15.59,17L17,15.59L13.41,12L17,8.41L15.59,7Z</Geometry>
            
            <!-- Drop shadow effect -->
            <DropShadowEffect x:Key="ToastShadow" 
                              BlurRadius="20" 
                              ShadowDepth="4" 
                              Direction="270" 
                              Color="#000000" 
                              Opacity="0.4"/>
        </ResourceDictionary>
    </controls:BaseWindow.Resources>
    
    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="2"
            CornerRadius="12"
            Effect="{StaticResource ToastShadow}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Icon and Title Row -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Icon -->
                <Viewbox Grid.Column="0"
                         Width="40"
                         Height="40"
                         Margin="0,0,15,0"
                         VerticalAlignment="Center">
                    <Path x:Name="MessageIcon"
                          Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                          Fill="{DynamicResource AccentBrush}"
                          Stretch="Uniform"/>
                </Viewbox>
                
                <!-- Title -->
                <TextBlock x:Name="TitleText"
                           Grid.Column="1"
                           Text="Message"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ForegroundBrush}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
            </Grid>
            
            <!-- Message Content -->
            <ScrollViewer Grid.Row="1"
                          MaxHeight="300"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,20">
                <TextBlock x:Name="MessageText"
                           Text="Message content goes here."
                           FontSize="14"
                           Foreground="{DynamicResource ForegroundBrush}"
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </ScrollViewer>
            
            <!-- Buttons -->
            <StackPanel x:Name="ButtonPanel"
                        Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,10">
                <!-- Buttons will be added dynamically -->
            </StackPanel>
        </Grid>
    </Border>
</controls:BaseWindow>

