<controls:BaseWindow x:Class="Tracker.Views.Dialogs.ReportsDialog"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:Tracker.Views.Dialogs"
                     xmlns:controls="clr-namespace:Tracker.Controls"
                     xmlns:languages="clr-namespace:Tracker.Resources.Languages"
                     xmlns:commands="clr-namespace:Tracker.Command"
                     xmlns:attachedProperties="clr-namespace:Tracker.AttachedProperties"
                     xmlns:converters="clr-namespace:Tracker.Common.Converters"
                     mc:Ignorable="d"
                     MouseDown="OnDragHandleMouseDown"
                     WindowStyle="None"
                     ResizeMode="CanResize"
                     AllowsTransparency="True"
                     Background="Transparent"
                     ShowInTaskbar="False"
                     Title="Reports" Height="500" Width="700">
    <controls:BaseWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/DialogStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:BaseWindow.Resources>
    <Grid>
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource ForegroundBrush}"
                CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        Height="Auto"
                        Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="12,12,0,0">
                    <controls:DialogTitleBar x:Name="TitleBar"
                                             DialogTitle="Reports &amp; Analytics"
                                             IconData="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z"
                                             CloseClicked="Close_Click"
                                             MinimizeClicked="Minimize_Click"
                                             MaximizeClicked="Maximize_Click"
                                             RestoreClicked="Restore_Click" />
                </Border>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                    <StackPanel>
                        <TextBlock Text="Export Data to Excel"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Export individual data types or generate a complete report with all data."
                                   Foreground="{DynamicResource HintTextBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>

                        <!-- Individual Export Buttons -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Grid.Column="0"
                                    Content="Export Team Members"
                                    Command="{Binding ExportTeamMembersCommand}"
                                    Style="{StaticResource DialogButtonStyle}"
                                    Margin="0,0,10,10"
                                    Padding="15,10"
                                    IsEnabled="{Binding IsExporting, Converter={StaticResource ReverseBooleanConverter}}">
                                <Button.ToolTip>
                                    <ToolTip Content="Export all team members to Excel"/>
                                </Button.ToolTip>
                            </Button>

                            <Button Grid.Row="0" Grid.Column="1"
                                    Content="Export 1:1 Meetings"
                                    Command="{Binding ExportOneOnOnesCommand}"
                                    Style="{StaticResource DialogButtonStyle}"
                                    Margin="10,0,0,10"
                                    Padding="15,10"
                                    IsEnabled="{Binding IsExporting, Converter={StaticResource ReverseBooleanConverter}}">
                                <Button.ToolTip>
                                    <ToolTip Content="Export all 1:1 meetings to Excel"/>
                                </Button.ToolTip>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="0"
                                    Content="Export Tasks"
                                    Command="{Binding ExportTasksCommand}"
                                    Style="{StaticResource DialogButtonStyle}"
                                    Margin="0,0,10,10"
                                    Padding="15,10"
                                    IsEnabled="{Binding IsExporting, Converter={StaticResource ReverseBooleanConverter}}">
                                <Button.ToolTip>
                                    <ToolTip Content="Export all tasks to Excel"/>
                                </Button.ToolTip>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="1"
                                    Content="Export Projects"
                                    Command="{Binding ExportProjectsCommand}"
                                    Style="{StaticResource DialogButtonStyle}"
                                    Margin="10,0,0,10"
                                    Padding="15,10"
                                    IsEnabled="{Binding IsExporting, Converter={StaticResource ReverseBooleanConverter}}">
                                <Button.ToolTip>
                                    <ToolTip Content="Export all projects to Excel"/>
                                </Button.ToolTip>
                            </Button>

                            <Button Grid.Row="2" Grid.Column="0"
                                    Content="Export OKRs"
                                    Command="{Binding ExportOKRsCommand}"
                                    Style="{StaticResource DialogButtonStyle}"
                                    Margin="0,0,10,10"
                                    Padding="15,10"
                                    IsEnabled="{Binding IsExporting, Converter={StaticResource ReverseBooleanConverter}}">
                                <Button.ToolTip>
                                    <ToolTip Content="Export all OKRs to Excel"/>
                                </Button.ToolTip>
                            </Button>

                            <Button Grid.Row="2" Grid.Column="1"
                                    Content="Export KPIs"
                                    Command="{Binding ExportKPIsCommand}"
                                    Style="{StaticResource DialogButtonStyle}"
                                    Margin="10,0,0,10"
                                    Padding="15,10"
                                    IsEnabled="{Binding IsExporting, Converter={StaticResource ReverseBooleanConverter}}">
                                <Button.ToolTip>
                                    <ToolTip Content="Export all KPIs to Excel"/>
                                </Button.ToolTip>
                            </Button>
                        </Grid>

                        <!-- Export All Button -->
                        <Border BorderBrush="{DynamicResource AccentBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,10,0,20">
                            <StackPanel>
                                <TextBlock Text="Complete Report"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource ForegroundBrush}"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Export all data types to a single Excel file with multiple worksheets."
                                           Foreground="{DynamicResource HintTextBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,15"/>
                                <Button Content="Export All Data"
                                        Command="{Binding ExportAllCommand}"
                                        Style="{StaticResource DialogButtonStyle}"
                                        Padding="20,12"
                                        HorizontalAlignment="Left"
                                        IsEnabled="{Binding IsExporting, Converter={StaticResource ReverseBooleanConverter}}">
                                    <Button.ToolTip>
                                        <ToolTip Content="Export all data to a single Excel file with summary"/>
                                    </Button.ToolTip>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Loading Indicator -->
                        <StackPanel Orientation="Horizontal" 
                                    Visibility="{Binding IsExporting, Converter={StaticResource BoolToVisibilityConverter}}"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0">
                            <TextBlock Text="Exporting..."
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                <Border Grid.Row="2"
                        Height="Auto"
                        Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="0,0,12,12">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="15,10,15,10">
                        <Button Content="Close"
                                Style="{StaticResource DialogButtonStyle}"
                                Padding="20,8"
                                Click="Close_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</controls:BaseWindow>

