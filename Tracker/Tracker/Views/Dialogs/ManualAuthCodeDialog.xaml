<controls:BaseWindow x:Class="Tracker.Views.Dialogs.ManualAuthCodeDialog"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:Tracker.Views.Dialogs"
                     xmlns:controls="clr-namespace:Tracker.Controls"
                     xmlns:languages="clr-namespace:Tracker.Resources.Languages"
                     xmlns:commands="clr-namespace:Tracker.Command"
                     xmlns:textBox="clr-namespace:DeepEndControls.Controls.TextBox;assembly=DeepEndControls"
                     mc:Ignorable="d"
                     MouseDown="OnDragHandleMouseDown"
                     WindowStyle="None"
                     ResizeMode="NoResize"
                     Foreground="{DynamicResource ForegroundBrush}"
                     AllowsTransparency="True"
                     SizeToContent="WidthAndHeight"
                     Background="Transparent"
                     MinWidth="400"
                     MaxWidth="500"
                     ShowInTaskbar="False">
    <controls:BaseWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/DialogStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:BaseWindow.Resources>
    <Grid>
        <Border Background="{DynamicResource BackgroundBrush}"
                BorderThickness="1"
                BorderBrush="{DynamicResource ForegroundBrush}"
                CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        Height="Auto"
                        Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="12,12,0,0">
                    <controls:DialogTitleBar x:Name="TitleBar"
                                             DialogTitle="Enter Authorization Code"
                                             IconData="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z"
                                             CloseClicked="Close_Click" />
                </Border>
                <Grid Grid.Row="1" Margin="20">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                   Margin="0,0,0,15"
                                   Foreground="{DynamicResource ForegroundBrush}">
                            <Run Text="If the automatic callback didn't work, you can manually enter the authorization code from your browser."/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="After authorizing in your browser, copy the code from the URL and paste it below:" FontWeight="SemiBold"/>
                        </TextBlock>
                        <Label Style="{StaticResource LabelStyle}" Content="Authorization Code" Margin="0,0,0,5"/>
                        <textBox:TextBoxWithHint TextBoxType="Text"
                                                 x:Name="AuthCodeTextBox"
                                                 HintText="Paste authorization code here"
                                                 Margin="0,0,0,15"
                                                 TextChanged="AuthCodeTextBox_TextChanged"/>
                        <TextBlock Text="The code is in the URL after 'code=' in your browser's address bar."
                                   Foreground="{DynamicResource HintTextBrush}"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Row="2"
                            Margin="0,10,20,20"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Style="{StaticResource DialogButtonStyle}"
                            Margin="0,0,10,0"
                            Content="Cancel"
                            Click="Cancel_Click" />
                    <Button Style="{StaticResource DialogButtonStyle}"
                            Content="Continue"
                            x:Name="ContinueButton"
                            IsEnabled="False"
                            Click="Continue_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</controls:BaseWindow>

