<UserControl x:Class="Tracker.Controls.ContactDataDisplayCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:local="clr-namespace:Tracker.Controls"
             xmlns:converters="clr-namespace:Tracker.Common.Converters"
             xmlns:languages="clr-namespace:Tracker.Resources.Languages"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <system:Boolean x:Key="TrueValue">True</system:Boolean>
            <system:Boolean x:Key="FalseValue">False</system:Boolean>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/DialogStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TabControl x:Name="TabControl"
                    Style="{StaticResource CardTabControlStyle}"
                    Grid.Row="0">
            <TabItem x:Name="DetailsTab"
                     Style="{StaticResource CardTabStyle}"
                     Header="Details" />
            <TabItem x:Name="ScheduleTab"
                     Style="{StaticResource CardTabStyle}"
                     Header="1:1s" />
            <TabItem x:Name="TasksTab"
                     Style="{StaticResource CardTabStyle}"
                     Header="Tasks" />
        </TabControl>
        <Grid x:Name="DetailsGrid"
              Visibility="{Binding ElementName=DetailsTab, Path=IsSelected, Converter={x:Static converters:BoolToVisibilityConverter.Instance}}"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Column="0"
                  Grid.Row="0"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Left"
                            Grid.Row="0">
                    <Label Style="{StaticResource LabelStyle}"
                           Margin="0,0,03, 0"
                           FontWeight="SemiBold"
                           FontSize="14"
                           FontStyle="Normal"
                           Content="{Binding FirstName}" />
                    <Label Style="{StaticResource LabelStyle}"
                           Margin="0,0,0, 0"
                           FontWeight="SemiBold"
                           FontSize="14"
                           FontStyle="Normal"
                           Content="{Binding LastName}" />
                </StackPanel>
                <Label Style="{StaticResource LabelStyle}"
                       Grid.Row="1"
                       Visibility="{Binding NickName, Converter={x:Static converters:EmptyStringToVisibilityConverter.Instance}}"
                       FontStyle="Normal"
                       Margin="0,0,0, 0">
                    <Label.Content>
                        <TextBlock>
                 <Run Text="(" />
                 <Run Text="{Binding NickName}" />
                 <Run Text=")" />
                        </TextBlock>
                    </Label.Content>
                </Label>
            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Ellipse Grid.Row="0"
                         Width="65"
                         Height="65"
                         Stroke="{DynamicResource ForegroundBrush}"
                         StrokeThickness="2"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         Margin="0,10,0,0">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding ProfileImage}"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Stretch="UniformToFill" />
                    </Ellipse.Fill>
                </Ellipse>

                <Grid Margin="10, 0, 10, 10"
                      Grid.Row="2"
                      Visibility="{Binding ElementName=EditModeButton, Path=Visibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1">
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,03, 0"
                               Content="{x:Static languages:Resources.Label_Role}" />
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,0, 0"
                               Content="{Binding Role.Description}" />
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="10,0,0, 0">
                            <Label.Content>
                                <TextBlock>
             <Run Text="(" />
             <Run Text="{Binding Level.Description, Mode=OneWay}" />
             <Run Text=")" />
                                </TextBlock>
                            </Label.Content>
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="3">
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,03, 0"
                               Content="{x:Static languages:Resources.Label_Speciality}" />
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,0, 0"
                               Content="{Binding Speciality.Description}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="4">
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,03, 0"
                               Content="{x:Static languages:Resources.Label_JobTitleColon}" />
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,0, 0"
                               Content="{Binding JobTitle}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="6">
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,03, 0"
                               Content="{x:Static languages:Resources.Label_BirthdayColon}" />
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,0, 0"
                               Content="{Binding BirthDayDisplay}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="7">
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,03, 0"
                               Content="{x:Static languages:Resources.Label_HireDateColon}" />
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,0, 0"
                               Content="{Binding HireDateDisplay}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding IsActive, Converter={x:Static converters:ReverseBoolToVisConverter.Instance}}"
                                Grid.Row="8">
                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,03, 0"
                               Content="{x:Static languages:Resources.Label_TerminationDateColon}" />

                        <Label Style="{StaticResource LabelStyle}"
                               Margin="0,0,0, 0"
                               Content="{Binding TerminationDateDisplay}" />
                    </StackPanel>
                    <Label Style="{StaticResource LabelStyle}"
                           Margin="0,0,0, 0"
                           Grid.Row="9"
                           Content="{Binding Email}" />
                    <Label Style="{StaticResource LabelStyle}"
                           Margin="0,0,0, 0"
                           Grid.Row="10"
                           Content="{Binding CellPhone}" />

                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0"
                                Grid.Row="11">
                        <Button Style="{StaticResource ToolbarButtonStyle}"
                                Margin="0,0,5,0"
                                Command="{Binding LaunchLinkedInUrlCommand}">
                            <Path Stretch="Uniform"
                                  Data="M19 3A2 2 0 0 1 21 5V19A2 2 0 0 1 19 21H5A2 2 0 0 1 3 19V5A2 2 0 0 1 5 3H19M18.5 18.5V13.2A3.26 3.26 0 0 0 15.24 9.94C14.39 9.94 13.4 10.46 12.92 11.24V10.13H10.13V18.5H12.92V13.57C12.92 12.8 13.54 12.17 14.31 12.17A1.4 1.4 0 0 1 15.71 13.57V18.5H18.5M6.88 8.56A1.68 1.68 0 0 0 8.56 6.88C8.56 5.95 7.81 5.19 6.88 5.19A1.69 1.69 0 0 0 5.19 6.88C5.19 7.81 5.95 8.56 6.88 8.56M8.27 18.5V10.13H5.5V18.5H8.27Z"
                                  Fill="{DynamicResource ForegroundBrush}">
                                <Path.ToolTip>
                                    <ToolTip Style="{StaticResource CustomInformationToolTip}">
                                        <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_LinkedIn}" />
                                    </ToolTip>
                                </Path.ToolTip>
                            </Path>
                        </Button>
                        <Button Style="{StaticResource ToolbarButtonStyle}"
                                Margin="0,0,5,0"
                                Command="{Binding LaunchLinkedInUrlCommand}">
                            <Path Stretch="Uniform"
                                  Data="M5,3H19A2,2 0 0,1 21,5V19A2,2 0 0,1 19,21H5A2,2 0 0,1 3,19V5A2,2 0 0,1 5,3M18,5H15.5A3.5,3.5 0 0,0 12,8.5V11H10V14H12V21H15V14H18V11H15V9A1,1 0 0,1 16,8H18V5Z"
                                  Fill="{DynamicResource ForegroundBrush}">
                                <Path.ToolTip>
                                    <ToolTip Style="{StaticResource CustomInformationToolTip}">
                                        <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_Facebook}" />
                                    </ToolTip>
                                </Path.ToolTip>
                            </Path>
                        </Button>
                        <Button Style="{StaticResource ToolbarButtonStyle}"
                                Margin="0,0,5,0"
                                Command="{Binding LaunchLinkedInUrlCommand}">
                            <Path Stretch="Uniform"
                                  Data="M7.8,2H16.2C19.4,2 22,4.6 22,7.8V16.2A5.8,5.8 0 0,1 16.2,22H7.8C4.6,22 2,19.4 2,16.2V7.8A5.8,5.8 0 0,1 7.8,2M7.6,4A3.6,3.6 0 0,0 4,7.6V16.4C4,18.39 5.61,20 7.6,20H16.4A3.6,3.6 0 0,0 20,16.4V7.6C20,5.61 18.39,4 16.4,4H7.6M17.25,5.5A1.25,1.25 0 0,1 18.5,6.75A1.25,1.25 0 0,1 17.25,8A1.25,1.25 0 0,1 16,6.75A1.25,1.25 0 0,1 17.25,5.5M12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9Z"
                                  Fill="{DynamicResource ForegroundBrush}">
                                <Path.ToolTip>
                                    <ToolTip Style="{StaticResource CustomInformationToolTip}">
                                        <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_Instagram}" />
                                    </ToolTip>
                                </Path.ToolTip>
                            </Path>
                        </Button>
                        <Button Style="{StaticResource ToolbarButtonStyle}"
                                Margin="0,0,5,0"
                                Command="{Binding LaunchLinkedInUrlCommand}">
                            <Path Stretch="Uniform"
                                  Data="M9,7H11L12,9.5L13,7H15L13,12L15,17H13L12,14.5L11,17H9L11,12L9,7M5,3H19A2,2 0 0,1 21,5V19A2,2 0 0,1 19,21H5A2,2 0 0,1 3,19V5A2,2 0 0,1 5,3M5,5V19H19V5H5Z"
                                  Fill="{DynamicResource ForegroundBrush}">
                                <Path.ToolTip>
                                    <ToolTip Style="{StaticResource CustomInformationToolTip}">
                                        <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_TwitterX}" />
                                    </ToolTip>
                                </Path.ToolTip>
                            </Path>
                        </Button>

                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:Name="ScheduleGrid"
              Grid.Row="1"
              Visibility="{Binding ElementName=ScheduleTab, Path=IsSelected, Converter={x:Static converters:BoolToVisibilityConverter.Instance}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Style="{StaticResource LabelStyle}"
                   Grid.Row="0"
                   Content="Next 1:1" />
            <Grid x:Name="NextOneOnOneGrid"
                  Grid.Row="1">

            </Grid>
            <Label Grid.Row="2"
                   Style="{StaticResource LabelStyle}"
                   Content="Upcoming" />
            <DataGrid Grid.Row="3" 
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:TeamMembersControl}}, Path=DataContext.SelectedTeamMemberOneOnOneCollection}"
                      IsReadOnly="True"
                      GridLinesVisibility="Vertical"
                      HeadersVisibility="Column"
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static languages:Resources.ColumnHeader_Date}"
                                        HeaderStyle="{StaticResource LeftAlignedHeaderStyle}"
                                        CellStyle="{StaticResource LeftAlignedCellStyle}"
                                        Binding="{Binding Date, StringFormat={}{0:MM/dd/yy}}"
                                        Width="Auto" />
                    <DataGridTextColumn Header="{x:Static languages:Resources.ColumnHeader_StartTime}"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                        Binding="{Binding StartTime}"
                                        Width="Auto" />
                    <!-- Empty column to fill remaining space -->
                    <DataGridTextColumn Width="*"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid x:Name="TasksGrid"
              Grid.Row="1"
              Visibility="{Binding ElementName=TasksTab, Path=IsSelected, Converter={x:Static converters:BoolToVisibilityConverter.Instance}}">
            <DataGrid></DataGrid>
        </Grid>
    </Grid>
</UserControl>
