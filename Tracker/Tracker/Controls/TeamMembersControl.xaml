                          Fill="{DynamicResource ForegroundBrush}"
                          Stretch="Uniform" />
                    <Button.ToolTip>
                        <ToolTip Style="{StaticResource CustomInformationToolTip}">
                            <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_AddMember}" />
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </StackPanel>

            <Button Style="{StaticResource ToolbarButtonStyle}"
                    Command="{x:Static commands:DialogCommands.LaunchDialogCommand}"
                    Grid.Column="1"
                    CommandParameter="{x:Static enums:DialogType.Settings}">
