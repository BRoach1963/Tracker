<UserControl x:Class="Tracker.Controls.TeamMembersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tracker.Controls"
             xmlns:commands="clr-namespace:Tracker.Command"
             xmlns:enums="clr-namespace:Tracker.Common.Enums"
             xmlns:languages="clr-namespace:Tracker.Resources.Languages"
             xmlns:converters="clr-namespace:Tracker.Common.Converters"
             xmlns:viewModels="clr-namespace:Tracker.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:TrackerMainViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource ForegroundBrush}"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="{DynamicResource BackgroundBrush}" />
            <StackPanel Orientation="Horizontal"
                        Grid.Column="0">
                <Button Style="{StaticResource ToolbarButtonStyle}"
                        Command="{x:Static commands:DialogCommands.LaunchDialogCommand}"
                        CommandParameter="{x:Static enums:DialogType.AddTeamMember}">
                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                          Fill="{DynamicResource ForegroundBrush}"
                          Stretch="Uniform" />
                    <Button.ToolTip>
                        <ToolTip Style="{StaticResource CustomInformationToolTip}">
                            <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_AddMember}" />
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="EditModeButton"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding TeamMemberEditCommand}"
                        CommandParameter="{Binding SelectedTeamMemberWrapper}"
                        Margin="0,3,3,3"
                        VerticalAlignment="Top" >
                    <Path Data="M21.7,13.35L20.7,14.35L18.65,12.3L19.65,11.3C19.86,11.09 20.21,11.09 20.42,11.3L21.7,12.58C21.91,12.79 21.91,13.14 21.7,13.35M12,18.94L18.06,12.88L20.11,14.93L14.06,21H12V18.94M12,14C7.58,14 4,15.79 4,18V20H10V18.11L14,14.11C13.34,14.03 12.67,14 12,14M12,4A4,4 0 0,0 8,8A4,4 0 0,0 12,12A4,4 0 0,0 16,8A4,4 0 0,0 12,4Z"
                          Stretch="Uniform"
                          Fill="{DynamicResource ForegroundBrush}" />
                    <Button.ToolTip>
                        <ToolTip Style="{StaticResource CustomInformationToolTip}">
                            <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_Edit}" />
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button x:Name="DeleteContactButton"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding TeamMemberDeleteCommand}"
                        CommandParameter="{Binding SelectedTeamMemberWrapper}"
                        Margin="0,3,3,3"
                        VerticalAlignment="Top">
                    <Path Data="M15,14C17.67,14 23,15.33 23,18V20H7V18C7,15.33 12.33,14 15,14M15,12A4,4 0 0,1 11,8A4,4 0 0,1 15,4A4,4 0 0,1 19,8A4,4 0 0,1 15,12M5,9.59L7.12,7.46L8.54,8.88L6.41,11L8.54,13.12L7.12,14.54L5,12.41L2.88,14.54L1.46,13.12L3.59,11L1.46,8.88L2.88,7.46L5,9.59Z"
                          Stretch="Uniform"
                          Fill="{DynamicResource ForegroundBrush}" />
                    <Button.ToolTip>
                        <ToolTip Style="{StaticResource CustomInformationToolTip}">
                            <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_DeleteContact}" />
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Border Width="1"
                        Background="{DynamicResource ForegroundBrush}"
                        Margin="0,3,3,3"/>
                <Button x:Name="ScheduleOneOnOne"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding AddTeamMemberOneOnOneCommand}"
                        CommandParameter="{Binding SelectedTeamMemberWrapper}"
                        Margin="0,3,3,3"
                        VerticalAlignment="Top">
                    <Path Data="M13 13H16V15H13V18H11V15H8V13H11V10H13V13M21 5V19C21 20.11 20.11 21 19 21H5C3.89 21 3 20.1 3 19V5C3 3.89 3.89 3 5 3H6V1H8V3H16V1H18V3H19C20.11 3 21 3.9 21 5M5 5V7H19V5H5M19 19V9H5V19H19Z"
                          Stretch="Uniform"
                          Fill="{DynamicResource ForegroundBrush}" />
                    <Button.ToolTip>
                        <ToolTip Style="{StaticResource CustomInformationToolTip}">
                            <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_AddOneOnOne}" />
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Border Width="1"
                        Background="{DynamicResource ForegroundBrush}"
                        Margin="0,3,3,3" />
                <Button x:Name="AddTask"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Command="{Binding TeamMemberDeleteCommand}"
                        CommandParameter="{Binding SelectedTeamMemberWrapper}"
                        Margin="0,3,3,3"
                        VerticalAlignment="Top">
                    <Path Data="M19,19H5V5H15V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V11H19M7.91,10.08L6.5,11.5L11,16L21,6L19.59,4.58L11,13.17L7.91,10.08Z"
                          Stretch="Uniform"
                          Fill="{DynamicResource ForegroundBrush}" />
                    <Button.ToolTip>
                        <ToolTip Style="{StaticResource CustomInformationToolTip}">
                            <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_AddTask}" />
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </StackPanel>

            <Button Style="{StaticResource ToolbarButtonStyle}"
                    Command="{x:Static commands:DialogCommands.LaunchDialogCommand}"
                    Grid.Column="1"
                    CommandParameter="{x:Static enums:DialogType.Settings}">
                <Path Data="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M10,22C9.75,22 9.54,21.82 9.5,21.58L9.13,18.93C8.5,18.68 7.96,18.34 7.44,17.94L4.95,18.95C4.73,19.03 4.46,18.95 4.34,18.73L2.34,15.27C2.21,15.05 2.27,14.78 2.46,14.63L4.57,12.97L4.5,12L4.57,11L2.46,9.37C2.27,9.22 2.21,8.95 2.34,8.73L4.34,5.27C4.46,5.05 4.73,4.96 4.95,5.05L7.44,6.05C7.96,5.66 8.5,5.32 9.13,5.07L9.5,2.42C9.54,2.18 9.75,2 10,2H14C14.25,2 14.46,2.18 14.5,2.42L14.87,5.07C15.5,5.32 16.04,5.66 16.56,6.05L19.05,5.05C19.27,4.96 19.54,5.05 19.66,5.27L21.66,8.73C21.79,8.95 21.73,9.22 21.54,9.37L19.43,11L19.5,12L19.43,13L21.54,14.63C21.73,14.78 21.79,15.05 21.66,15.27L19.66,18.73C19.54,18.95 19.27,19.04 19.05,18.95L16.56,17.95C16.04,18.34 15.5,18.68 14.87,18.93L14.5,21.58C14.46,21.82 14.25,22 14,22H10M11.25,4L10.88,6.61C9.68,6.86 8.62,7.5 7.85,8.39L5.44,7.35L4.69,8.65L6.8,10.2C6.4,11.37 6.4,12.64 6.8,13.8L4.68,15.36L5.43,16.66L7.86,15.62C8.63,16.5 9.68,17.14 10.87,17.38L11.24,20H12.76L13.13,17.39C14.32,17.14 15.37,16.5 16.14,15.62L18.57,16.66L19.32,15.36L17.2,13.81C17.6,12.64 17.6,11.37 17.2,10.2L19.31,8.65L18.56,7.35L16.15,8.39C15.38,7.5 14.32,6.86 13.12,6.62L12.75,4H11.25Z"
                      Fill="{DynamicResource ForegroundBrush}"
                      Stretch="Uniform" />
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource CustomInformationToolTip}">
                        <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_Settings}" />
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding TeamMembers}"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedTeamMember}"
                      IsReadOnly="True"
                      GridLinesVisibility="Vertical"
                      HeadersVisibility="Column"
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="First Name"
                                        CellStyle="{StaticResource LeftAlignedCellStyle}"
                                        HeaderStyle="{StaticResource LeftAlignedHeaderStyle}"
                                        Binding="{Binding FirstName}"
                                        Width="Auto" />
                    <DataGridTextColumn Header="Last Name"
                                        CellStyle="{StaticResource LeftAlignedCellStyle}"
                                        HeaderStyle="{StaticResource LeftAlignedHeaderStyle}"
                                        Binding="{Binding LastName}"
                                        Width="Auto" />
                    <DataGridTextColumn Header="Role"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                        Binding="{Binding Role}"
                                        Width="Auto" />
                    <DataGridTextColumn Header="Email"
                                        Binding="{Binding Email}"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                        Width="Auto" />
                    <DataGridTextColumn Header="Cell"
                                        Binding="{Binding CellPhone}"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                        Width="Auto" />
                    <!-- Empty column to fill remaining space -->
                    <DataGridTextColumn Width="*"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
            <local:ContactDataDisplayCard Grid.Column="1"
                                          Width="225"
                                          Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:TeamMembersControl}}, Path = DataContext.SelectedTeamMemberWrapper, Converter={x:Static converters:NullToVisibilityConverter.Instance}}"
                                          DataContext="{Binding SelectedTeamMemberWrapper}" />
        </Grid>
    </Grid>
</UserControl>
