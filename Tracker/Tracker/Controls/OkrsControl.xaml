             xmlns:local="clr-namespace:Tracker.Controls"
             xmlns:commands="clr-namespace:Tracker.Command"
             xmlns:enums="clr-namespace:Tracker.Common.Enums"
             xmlns:languages="clr-namespace:Tracker.Resources.Languages"
             xmlns:converters="clr-namespace:Tracker.Common.Converters"
             mc:Ignorable="d"
             Background="{DynamicResource BackgroundBrush}"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ObjectiveStatusToColorConverter x:Key="ObjectiveStatusToColorConverter" />
        <converters:KpiStatusToColorConverter x:Key="KpiStatusToColorConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource ForegroundBrush}"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="{DynamicResource BackgroundBrush}" />
            <StackPanel Orientation="Horizontal"
