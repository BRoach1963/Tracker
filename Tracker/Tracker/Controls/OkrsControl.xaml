                      Stretch="Uniform" />
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource CustomInformationToolTip}">
                        <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_Settings}" />
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </Grid>
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ObjectiveKeyResults}"
                  SelectedItem="{Binding SelectedOkr, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  GridLinesVisibility="Vertical"
                  HeadersVisibility="Column"
                  RowDetailsVisibilityMode="Collapsed"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTemplateColumn MinWidth="30"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                        MaxWidth="30">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ToggleButton x:Name="ExpanderButton"
                                          Click="Expand_Details_Click"
                                          Style="{StaticResource ExpanderToggleStyle}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Title"
                                        HeaderStyle="{StaticResource LeftAlignedHeaderStyle}"
                                        CellStyle="{StaticResource LeftAlignedCellStyle}"
                                        Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="150">
                                <TextBlock.ToolTip>
                                    <ToolTip Style="{StaticResource CustomInformationToolTip}">
                                        <local:TrackerToolTip ToolTipText="{Binding Title}" />
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Description"
                                        HeaderStyle="{StaticResource LeftAlignedHeaderStyle}"
                                        CellStyle="{StaticResource LeftAlignedCellStyle}"
                                        Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Description}"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="150">
                                <TextBlock.ToolTip>
                                    <ToolTip Style="{StaticResource CustomInformationToolTip}">
                                        <local:TrackerToolTip ToolTipText="{Binding Description}" />
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Owner"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="Owner.FirstName" />
                                        <Binding Path="Owner.LastName" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Start Date"
                                    HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                    Binding="{Binding StartDate, StringFormat={}{0:MM/dd/yy}}"
                                    Width="Auto" />
                <DataGridTextColumn Header="End Date"
                                    HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                    Binding="{Binding EndDate, StringFormat={}{0:MM/dd/yy}}"
                                    Width="Auto" />
                <DataGridTextColumn Header="%"
                                    Width="Auto"
                                    HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                    Binding="{Binding CompletionPercentage, StringFormat={}{0:N0}%}" />
                <DataGridTextColumn Header="Discussed In"
                                    HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                    Binding="{Binding MeetingCount, StringFormat={}{0} meeting(s)}"
                                    Width="Auto" />
                <DataGridTemplateColumn Header="Status"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Path Data="M6,6.9L3.87,4.78L5.28,3.37L7.4,5.5L6,6.9M13,1V4H11V1H13M20.13,4.78L18,6.9L16.6,5.5L18.72,3.37L20.13,4.78M4.5,10.5V12.5H1.5V10.5H4.5M19.5,10.5H22.5V12.5H19.5V10.5M6,20H18A2,2 0 0,1 20,22H4A2,2 0 0,1 6,20M12,5A6,6 0 0,1 18,11V19H6V11A6,6 0 0,1 12,5M12,7A4,4 0 0,0 8,11V17H16V11A4,4 0 0,0 12,7Z"
                                      Width="20"
                                      Height="20"
                                      Fill="{Binding Status, Converter={StaticResource ObjectiveStatusToColorConverter}}"
                                      Stretch="Uniform"></Path>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Action column with Edit and Delete buttons -->
                <DataGridTemplateColumn Header="Action"
                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                        Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <!-- Edit Button -->
                                <Button Style="{StaticResource GridActionButtonStyle}"
                                        Command="{Binding DataContext.EditOkrCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                    <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                          Fill="{DynamicResource ForegroundBrush}"
                                          Width="14"
                                          Height="14"
                                          Stretch="Uniform" />
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource CustomInformationToolTip}">
                                            <local:TrackerToolTip ToolTipText="Edit OKR" />
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>
                                <!-- Delete Button -->
                                <Button Style="{StaticResource GridActionButtonStyle}"
                                        Command="{Binding DataContext.DeleteOkrCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Margin="4,0,0,0">
                                    <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                          Fill="{DynamicResource ErrorBrush}"
                                          Width="14"
                                          Height="14"
                                          Stretch="Uniform" />
                                    <Button.ToolTip>
                                        <ToolTip Style="{StaticResource CustomInformationToolTip}">
                                            <local:TrackerToolTip ToolTipText="Delete OKR" />
                                        </ToolTip>
                                    </Button.ToolTip>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Empty column to fill remaining space -->
                <DataGridTextColumn Width="*"
                                    HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                    IsReadOnly="True" />

            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Background="{DynamicResource BackgroundBrush}"
                            HorizontalAlignment="Stretch"
                            BorderBrush="Transparent"> 
                    <DataGrid AutoGenerateColumns="False"
                              HorizontalAlignment="Stretch"
                              HeadersVisibility="Column"
                              ColumnHeaderStyle="{StaticResource BaseDataGridColumnHeaderStyle}"
                              Background="{DynamicResource BackgroundBrush}"
                              ItemsSource="{Binding KeyResults}"
                              CanUserAddRows="False"
                              GridLinesVisibility="Vertical"
                              CanUserDeleteRows="False"
                              Margin="0,10,0,0">
                            <!-- KPI Columns -->
                            <DataGrid.Columns>
                                <DataGridTemplateColumn MinWidth="30"
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                                        MaxWidth="30">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate> 
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Name"
                                                    CellStyle="{StaticResource LeftAlignedCellStyle}"
                                                    HeaderStyle="{StaticResource LeftAlignedHeaderStyle}"
                                                    Binding="{Binding Name}"
                                                    Width="Auto" />
                                <DataGridTextColumn Header="Value"
                                                    Binding="{Binding Value}"
                                                    HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                                    Width="Auto" />
                                <DataGridTextColumn Header="TargetValue"
                                                    HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                                    Binding="{Binding TargetValue}"
                                                    Width="Auto" />
                                <DataGridTemplateColumn Header="Owner"
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                        <Binding Path="Owner.FirstName" />
                                                        <Binding Path="Owner.LastName" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Last Updated"
                                                    HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                                    Binding="{Binding LastUpdated, StringFormat={}{0:MM/dd/yy}}"
                                                    Width="Auto" />
                                <DataGridTemplateColumn Header="Status"
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Path Data="M6,6.9L3.87,4.78L5.28,3.37L7.4,5.5L6,6.9M13,1V4H11V1H13M20.13,4.78L18,6.9L16.6,5.5L18.72,3.37L20.13,4.78M4.5,10.5V12.5H1.5V10.5H4.5M19.5,10.5H22.5V12.5H19.5V10.5M6,20H18A2,2 0 0,1 20,22H4A2,2 0 0,1 6,20M12,5A6,6 0 0,1 18,11V19H6V11A6,6 0 0,1 12,5M12,7A4,4 0 0,0 8,11V17H16V11A4,4 0 0,0 12,7Z"
                                                      Width="20"
                                                      Height="20"
                                                      Fill="{Binding Status, Converter={StaticResource KpiStatusToColorConverter}}"
                                                      Stretch="Uniform"></Path>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn> 
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>

</UserControl>
