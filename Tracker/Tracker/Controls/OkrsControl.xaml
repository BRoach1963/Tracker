                    </Grid>
                    <Button.ToolTip>
                        <ToolTip Style="{StaticResource CustomInformationToolTip}">
                            <local:TrackerToolTip ToolTipText="{x:Static languages:Resources.ToolTip_AddOKR}" />
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </StackPanel>

