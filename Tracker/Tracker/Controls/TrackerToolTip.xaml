<UserControl x:Class="Tracker.Controls.TrackerToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tracker.Controls"
             mc:Ignorable="d"   
             Opacity=".7" 
             Height="Auto"
             MaxWidth="250"> 
        <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TrackerToolTip}},Path=ToolTipText}"
               Foreground="{DynamicResource ForegroundBrush}"
               FontSize="14"
               TextWrapping="Wrap" /> 

</UserControl>
