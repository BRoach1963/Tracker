<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Modern Theme - Contemporary indigo/purple -->
    
    <Color x:Key="BackgroundColor">#F8FAFC</Color>
    <Color x:Key="ForegroundColor">#6366F1</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#6366F1"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="#334155"/>
    <SolidColorBrush x:Key="HintTextBrush" Color="#94A3B8"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="Gray"/>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="#6366F1"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#8B5CF6"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="TextBrush" Color="#334155"/>
    
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PopupBorderBrush" Color="#E2E8F0"/>
    
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#EEF2FF"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#6366F1"/>
    
    <SolidColorBrush x:Key="ToolTipBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ToolTipForeground" Color="#334155"/>
    
    <SolidColorBrush x:Key="SelectionBrush" Color="#E0E7FF"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="#F8FAFC"/>
</ResourceDictionary>

