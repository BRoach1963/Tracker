<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light Theme - Clean professional with blue accents -->
    
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="ForegroundColor">#0078D4</Color>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="HintTextBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="Gray"/>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC2626"/>
    <SolidColorBrush x:Key="TextBrush" Color="#1F2937"/>
    
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="PopupBorderBrush" Color="#D1D5DB"/>
    
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#0078D4"/>
    
    <SolidColorBrush x:Key="ToolTipBackground" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="ToolTipForeground" Color="#1F2937"/>
    
    <SolidColorBrush x:Key="SelectionBrush" Color="#DBEAFE"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="#F5F5F5"/>
    
    <!-- DataGrid Specific - White cells with dark text, blue headers with white text -->
    <SolidColorBrush x:Key="DataGridCellBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridCellForegroundBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="DataGridCellBorderBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="DataGridHeaderBackgroundBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="DataGridHeaderForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridRowAlternateBrush" Color="#F9FAFB"/>
</ResourceDictionary>
