    <!-- Data Grid Styles -->

    <Style x:Key="BaseDataGridColumnHeaderStyle"
           TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="2,5,5,5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridColumnHeader">
                    <Border Padding="{TemplateBinding Padding}"
                            BorderThickness="1,0,1,0"
                            BorderBrush="{TemplateBinding Foreground}"
                            Background="{TemplateBinding Background}">
                        <Grid HorizontalAlignment="Stretch">
                            <!-- Background Rectangle -->
                            <Rectangle Fill="{TemplateBinding Background}" />

                            <Grid HorizontalAlignment="Stretch"  
                                  VerticalAlignment="Stretch"
                                  Margin="04,0,4,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="10" />
                                </Grid.ColumnDefinitions>

                                <!-- Content Presenter for Header Text -->
                                <ContentPresenter Grid.Column="0"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />

                                <!-- Sort Indicator -->
                                <Path x:Name="SortIndicator"
                                      Grid.Column="1"
                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                      Fill="{DynamicResource ForegroundBrush}"
                                      VerticalAlignment="Center"
                                      Stretch="Uniform"
                                      Width="10"
                                      RenderTransformOrigin="0.5,0.5"
                                      Visibility="Collapsed">
                                    <Path.RenderTransform>
                                        <RotateTransform Angle="0"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Grid>

                            <!-- Column Separator -->
                            <Grid HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <!-- Spacer above -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Separator row -->
                                    <RowDefinition Height="*" />
                                    <!-- Spacer below -->
                                </Grid.RowDefinitions>
                                <Border x:Name="Separator" 
                                    Grid.Row="1"
                                    Width="1" 
                                    Background="{DynamicResource ForegroundBrush}" 
                                    HorizontalAlignment="Right"/>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Trigger to show sort indicator when sorting -->
                        <Trigger Property="SortDirection" Value="Ascending">
                            <Setter TargetName="SortIndicator" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="SortIndicator" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="0"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="SortDirection" Value="Descending">
                            <Setter TargetName="SortIndicator" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="SortIndicator" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="180"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
